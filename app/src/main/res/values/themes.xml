        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="text_appearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="fontFamily">@font/khand_semibold</item>
